@using Eshop.Web.ViewModels.Account
@model LoginUserViewModel

@{
    ViewData["Title"] = "ورود";
}

@section ExtraFooterReferences
{
    <partial name="_ValidationScriptsPartial"/>
}

<div class="container">
    <section id="form">
        <!--form-->
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="login-form">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            <p>@TempData["SuccessMessage"]</p>
                        </div>
                    }
                    <!--sign up form-->
                    <h2>@ViewData["Title"]</h2>
                    <form method="post" asp-controller="Account" asp-action="Login">
                        <input asp-for="Email" placeholder="آدرس ایمیـل">
                        <span asp-validation-for="Email" class="text-danger"></span>

                        <input asp-for="Password" placeholder="رمـز عبـور">
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <span>
                            <input asp-for="RememberMe" class="checkbox">
                            مرا بخاطـر بسپـار
                        </span>
                        <span>
                            <a href="">رمـز عبـور خود را فراموش کرده ام</a>
                        </span>

                        <button type="submit" class="btn btn-default">ورود</button>
                    </form>

                </div><!--/sign up form-->
            </div>
        </div>
    </section>
</div>