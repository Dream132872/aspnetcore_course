@using Eshop.Web.ViewModels.Account
@model RegisterUserViewModel

@{
    ViewData["Title"] = "ثبت نام";
}

@section ExtraFooterReferences
{
    <partial name="_ValidationScriptsPartial"/>
}

<div class="container">
    <section id="form">
        <!--form-->
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>@ViewData["Title"]</h2>
                    <form method="post" asp-controller="Account" asp-action="Register">
                        <input asp-for="Email" placeholder="آدرس ایمیـل">
                        <span asp-validation-for="Email" class="text-danger"></span>

                        <input asp-for="Password" placeholder="رمـز عبـور">
                        <span asp-validation-for="Password" class="text-danger"></span>

                        <input asp-for="ConfirmPassword" placeholder="تکرار کلمه عبـور">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        <button type="submit" class="btn btn-default">ثبت نام</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </section>
</div>