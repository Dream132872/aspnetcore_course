@using Eshop.Web.Entities.Catalog
@model List<Slider>
@{
	int index = 0;
}

<section id="slider"><!--slider-->
		<div class="container">
			<div class="row">
				<div class="col-sm-12">
					<div id="slider-carousel" class="carousel slide" data-ride="carousel">
						<ol class="carousel-indicators">
						@for (int i=0; i< Model.Count;i++)
						{
							<li data-target="#slider-carousel" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
						}
					</ol>
						
						<div class="carousel-inner">
							
							@foreach(var slider in Model){
								<div class="item @(index == 0 ? "active" : "")">
									<div class="col-sm-6">
										<h2>@slider.Title</h2>
										<p>@slider.Description</p>
										<a href="@slider.Url" type="button" class="btn btn-default get">مشاهده</a>
									</div>
									<div class="col-sm-6">
										<img src="/site/images/home/girl2.jpg" class="girl img-responsive" alt="" />
									</div>
								</div>
								index++;
							}
						</div>
						
						<a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
							<i class="fa fa-angle-left"></i>
						</a>
						<a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
							<i class="fa fa-angle-right"></i>
						</a>
					</div>
					
				</div>
			</div>
		</div>
</section><!--/slider-->
	